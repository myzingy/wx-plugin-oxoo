.qnupload{
    display: inline-block;
    width: 200rpx;
    height: 200rpx;
    padding: 20rpx;
}
.qnupload.video{
    width: calc(100% - 40rpx);
}
.upload{
    background-color: antiquewhite;
    position: relative;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 50% 50%;
    overflow: hidden;
}
.upload.add:before{
    content: '';
    left:calc(50% - 50rpx);
    top:calc(50% - 10rpx);
    width: 100rpx;
    height: 20rpx;
    background-color: #FAC7B6;
    position: absolute;
}
.upload.add:after{
    content: '';
    left:calc(50% - 10rpx);
    top:calc(50% - 50rpx);
    width: 20rpx;
    height: 100rpx;
    background-color: #FAC7B6;
    position: absolute;
}


.block{
    padding: 20rpx;
    margin: 20rpx;
    width: calc(100% - 80rpx - 4rpx);
    border: 2rpx solid #ccc;
    border-radius: 10rpx;
    font-size: 32rpx;
}
.block-title{
    height: 50rpx;
    line-height: 50rpx;
    border-bottom: 2rpx solid #ccc;
    margin-bottom: 30rpx;
}

.image-info-view{
    position: fixed;
    color: #fff;
    bottom: 0;
    left: 0;
    width: 100%;
}
.image-info-close{
    position: fixed;
    color: #fff;
    bottom: 20rpx;
    right: 20rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: rgba(200,200,0,0.7);
    border-radius: 100%;
    line-height: 100rpx;
    text-align: center;
    font-size: 100rpx;
    overflow: hidden;
}
.image-info{
    width: calc(100% - 80rpx);
    padding: 100rpx 40rpx;
    word-break:break-all;
    background-color: rgba(200,200,0,0.7);
}
.upload.play:before{
    content: '';
    left:calc(50% - 75rpx);
    top:calc(50% - 50rpx);
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    transform: rotate(135deg);
    border-width: 40rpx;
    border-color: #FAC7B6 transparent transparent #FAC7B6;
    /*border-style: solid;*/
    border-style: ridge;
    /*border-style: groove;*/
    border-radius: 50rpx;
    border-top-left-radius: 10rpx;
    box-sizing: border-box;
}
